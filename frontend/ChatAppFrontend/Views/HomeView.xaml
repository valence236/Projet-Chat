<UserControl x:Class="ChatAppFrontend.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <!-- Style PlaceholderTextBox -->
    <UserControl.Resources>
        <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Placeholder"
                                       Text="{TemplateBinding Tag}"
                                       Margin="5,0,0,0"
                                       Foreground="Gray"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F0F0F0">
        <Border Width="1000"
                Height="600"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="White"
                Padding="20"
                CornerRadius="10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- COLONNE GAUCHE -->
                <StackPanel Grid.Column="0" Margin="0 0 10 20">
                    <TextBlock Text="Bienvenue sur l'application de Chat"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0"
                               HorizontalAlignment="Left"/>

                    <!-- Formulaire création salon -->
                    <TextBlock Text="Créer un salon" FontWeight="Bold" Margin="0 10 0 0" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <TextBlock Text="Nom du salon"/>
                        <TextBox Text="{Binding NomNouveauSalon, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0 5"
                                 HorizontalAlignment="Stretch"/>

                        <TextBlock Text="Description"/>
                        <TextBox Text="{Binding DescriptionNouveauSalon, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0 5"
                                 HorizontalAlignment="Stretch"/>

                        <Button Content="Créer le"
                                Command="{Binding CreerSalonCommand}"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="5,2"
                                Width="100"
                                Margin="0 5 0 0"/>
                    </StackPanel>

                    <!-- Liste des salons -->
                    <TextBlock Text="Salons disponibles" FontWeight="Bold" Margin="0 10 0 5"/>
                    <DataGrid ItemsSource="{Binding Rooms}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Height="300"
                              SelectedItem="{Binding SalonSelectionne, Mode=TwoWay}"
                              SelectionChanged="DataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*" />
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" />
                            <DataGridTemplateColumn Header="Suppr." Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="❌"
                                                Command="{Binding DataContext.SupprimerSalonCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Foreground="Red"
                                                FontSize="16"
                                                ToolTip="Supprimer ce salon"
                                                Padding="0"
                                                Width="30"
                                                Background="Transparent"
                                                BorderBrush="Transparent"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Déconnexion -->
                    <Button Content="Déconnexion"
                            Click="Logout_Click"
                            Background="#F44336"
                            Foreground="White"
                            Padding="5,2"
                            HorizontalAlignment="Center"
                            Width="100"
                            Margin="0 10 0 10"/>
                </StackPanel>

                <!-- COLONNE DROITE -->
                <Border Grid.Column="1"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Background="#FAFAFA">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Titre salon -->
                        <TextBlock Text="{Binding SalonSelectionne.Nom, TargetNullValue='[Aucun salon sélectionné]'}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#444"
                                   Margin="0 0 0 10"/>

                        <!-- Messages -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Messages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0 0 0 10">
                                            <TextBlock Text="{Binding Sender}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Timestamp}" FontSize="10" Foreground="Gray" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Zone de saisie -->
                        <Grid Grid.Row="2" Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Champ message -->
                            <TextBox Grid.Column="0"
                                     Height="30"
                                     Margin="0 0 10 0"
                                     Background="White"
                                     VerticalAlignment="Center"
                                     HorizontalContentAlignment="Left"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource PlaceholderTextBox}"
                                     Tag="Écrire un message..."
                                     Text="{Binding MessageAEnvoyer, UpdateSourceTrigger=PropertyChanged}" />

                            <!-- Bouton envoyer -->
                            <Button Grid.Column="1"
                                    Content="Envoyer"
                                    Width="80"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Padding="5,0"
                                    VerticalAlignment="Center"
                                    Command="{Binding EnvoyerMessageCommand}"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
