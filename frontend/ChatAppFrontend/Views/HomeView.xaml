<UserControl x:Class="ChatAppFrontend.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <!-- Fond gris clair -->
    <Grid Background="#F0F0F0">
        <!-- Conteneur blanc centré -->
        <Border Width="700"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="White"
                Padding="20"
                CornerRadius="10">

            <StackPanel>

                <!-- Titre -->
                <TextBlock Text="Bienvenue sur l'application de Chat"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"/>

                <!-- Barre de création + déconnexion -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Champ + Créer -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <StackPanel>
                            <TextBlock Text="Nom du salon" Margin="0 0 0 5"/>
                            <TextBox Width="200"
                                     Text="{Binding NomNouveauSalon, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0 10 0 0"/>
                        </StackPanel>

                        <Button Content="Créer"
                                Command="{Binding CreerSalonCommand}"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="5,2"
                                VerticalAlignment="Bottom"
                                Margin="10 0 0 0"/>
                    </StackPanel>

                    <!-- Déconnexion -->
                    <Button Content="Déconnexion"
                            Grid.Column="1"
                            Click="Logout_Click"
                            Background="#2196F3"
                            Foreground="White"
                            Padding="5,2"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right"
                            Margin="10 0 0 0"
                            Width="100"/>
                </Grid>

                <!-- Liste des salons -->
                <DataGrid ItemsSource="{Binding Rooms}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Margin="0 0 0 0"
                          IsReadOnly="True"
                          Height="300">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*" />
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" />
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="Auto"/>

                        <!-- Colonne Supprimer -->
                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                      <Button Content="❌"
        Command="{Binding DataContext.SupprimerSalonCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
        CommandParameter="{Binding}"
        Foreground="Red"
        FontSize="16"
        Cursor="Hand"
        ToolTip="Supprimer ce salon"
        Padding="0"
        Width="30"
        Background="Transparent"
        BorderBrush="Transparent">
    <Button.Template>
        <ControlTemplate TargetType="Button">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </ControlTemplate>
    </Button.Template>
</Button>

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
