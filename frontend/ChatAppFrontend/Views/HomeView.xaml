<UserControl x:Class="ChatAppFrontend.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ChatAppFrontend.ViewModel"
             mc:Ignorable="d">

    <!-- Style PlaceholderTextBox -->
    <UserControl.Resources>
        <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Placeholder"
                                       Text="{TemplateBinding Tag}"
                                       Margin="5,0,0,0"
                                       Foreground="Gray"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F0F0F0">
        <Border Width="1000"
                Height="600"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="White"
                Padding="20"
                CornerRadius="10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- Barre de titre en haut avec les actions -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                    <Label Content="Chat Application" FontWeight="Bold" FontSize="18" />
                    <Button Content="CrÃ©er un salon" Command="{Binding CreerSalonCommand}" Margin="10,0,0,0" />
                    <Button Content="Se dÃ©connecter" Command="{Binding LogoutCommand}" Margin="10,0,0,0" />
                    <Button Content="Tester Config Serveur" Command="{Binding TestConfigurationCommand}" Margin="10,0,0,0" Background="#FFE0E0" />
                </StackPanel>
                
                <!-- Statut / Messages du systÃ¨me -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding StatusMessage}" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Blue" />

                <!-- COLONNE GAUCHE -->
                <StackPanel Grid.Column="0" Margin="0 0 10 20">
                    <TextBlock Text="Bienvenue sur l'application de Chat"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0"
                               HorizontalAlignment="Left"/>

                    <!-- Formulaire crÃ©ation salon -->
                    <TextBlock Text="CrÃ©er un salon" FontWeight="Bold" Margin="0 10 0 0" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <TextBlock Text="Nom du salon"/>
                        <TextBox Text="{Binding NomNouveauSalon, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0 5"
                                 HorizontalAlignment="Stretch"/>

                        <TextBlock Text="Description"/>
                        <TextBox Text="{Binding DescriptionNouveauSalon, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0 5"
                                 HorizontalAlignment="Stretch"/>

                        <Button Content="CrÃ©er le salon"
                                Command="{Binding CreerSalonCommand}"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="5,2"
                                Width="100"
                                Margin="0 5 0 0"/>
                    </StackPanel>

                    <!-- Section Utilisateurs -->
                    <TextBlock Text="Utilisateurs" FontWeight="Bold" Margin="0 10 0 5"/>
                    <ListView ItemsSource="{Binding Users}"
                              Height="150"
                              BorderThickness="1"
                              BorderBrush="#ddd"
                              Margin="0 0 0 10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Username}" />
                                    <Button Content="ðŸ’¬"
                                            Command="{Binding DataContext.SelectUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="5,0,0,0"
                                            ToolTip="Discuter avec cet utilisateur"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Liste des salons -->
                    <TextBlock Text="Salons disponibles" FontWeight="Bold" Margin="0 10 0 5"/>
                    <ListView ItemsSource="{Binding Channels}"
                              Height="150"
                              BorderThickness="1"
                              BorderBrush="#ddd">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="#" Foreground="#555" />
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                        </StackPanel>
                                        <TextBlock Text="{Binding Description}" 
                                                   TextWrapping="Wrap" 
                                                   Foreground="#777"
                                                   FontSize="11" />
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="ðŸ’¬"
                                                Command="{Binding DataContext.SelectChannelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Margin="5,0,0,0"
                                                ToolTip="Ouvrir ce salon" />
                                        
                                        <Button Content="âŒ"
                                                Command="{Binding DataContext.SupprimerSalonCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Margin="5,0,0,0"
                                                Foreground="Red"
                                                ToolTip="Supprimer ce salon" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Salon Public -->
                    <Button Content="Chat Public"
                            Click="PublicChat_Click"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="5,2"
                            Margin="0 10 0 0"/>

                    <!-- DÃ©connexion -->
                    <Button Content="DÃ©connexion"
                            Command="{Binding LogoutCommand}"
                            Background="#F44336"
                            Foreground="White"
                            Padding="5,2"
                            HorizontalAlignment="Center"
                            Width="100"
                            Margin="0 10 0 10"/>
                </StackPanel>

                <!-- COLONNE DROITE -->
                <Border Grid.Column="1"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Background="#FAFAFA">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Titre salon -->
                        <TextBlock Text="{Binding CurrentConversation.Name, TargetNullValue='[Aucune conversation sÃ©lectionnÃ©e]'}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#444"
                                   Margin="0 0 0 10"/>

                        <!-- Messages -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Messages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="0 0 0 1" 
                                                BorderBrush="#EEEEEE" 
                                                Margin="0,0,0,10" 
                                                Padding="0,0,0,5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <!-- Utiliser Label au lieu de TextBlock -->
                                                    <Border Background="#F0F0F0" 
                                                            Padding="5,2" 
                                                            CornerRadius="3"
                                                            HorizontalAlignment="Left">
                                                        <Label Content="{Binding Sender}" 
                                                               FontWeight="Bold"
                                                               Padding="2"/>
                                                    </Border>
                                                    
                                                    <!-- Limiter le contenu du message Ã  afficher -->
                                                    <Label Content="{Binding Content}" 
                                                           Margin="0,5,0,0" 
                                                           Padding="2"/>
                                                    
                                                    <!-- Afficher la date dans un format simple -->
                                                    <Label Content="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" 
                                                           FontSize="10" 
                                                           Foreground="Gray" 
                                                           HorizontalAlignment="Right"
                                                           Padding="2"/>
                                                </StackPanel>
                                                
                                                <!-- Bouton de suppression simplifiÃ© -->
                                                <Button Grid.Column="1"
                                                        Content="ðŸ—‘ï¸"
                                                        Command="{Binding DataContext.DeleteMessageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        ToolTip="Supprimer ce message"
                                                        Visibility="Collapsed"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Zone de saisie -->
                        <Grid Grid.Row="2" Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Champ message -->
                            <TextBox Grid.Column="0"
                                     Height="30"
                                     Margin="0 0 10 0"
                                     Background="White"
                                     VerticalAlignment="Center"
                                     HorizontalContentAlignment="Left"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource PlaceholderTextBox}"
                                     Tag="Ã‰crire un message..."
                                     Text="{Binding MessageAEnvoyer, UpdateSourceTrigger=PropertyChanged}"
                                     KeyDown="MessageTextBox_KeyDown" />

                            <!-- Bouton envoyer -->
                            <Button Grid.Column="1"
                                    Content="Envoyer"
                                    Width="80"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Padding="5,0"
                                    VerticalAlignment="Center"
                                    Command="{Binding EnvoyerMessageCommand}"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
